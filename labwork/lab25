void Book::setTitle(string bookTitle) {
    title = bookTitle;
    return;
}

string Book::getTitle(){
    return title;
}

void Book::setAuthor(string bookAuthor) {
    author = bookAuthor;
    return;
}

string Book::getAuthor(){
    return author;
}

void Book::setCopyright(string bookCopyright){
    copyright = bookCopyright;
    return;
}

string Book::getCopyright(){
    return copyright;
}

void Book::setYear(int bookYear){
    year = bookYear;
    return;
}

int Book::getYear(){
    return year;
}

void Book::promptUser(string title,string author,string copyright,int year){
   cout << "Title of book: " << endl;
